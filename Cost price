#include <stdio.h>

int main()
{
    int cost;
    float amount;
    
    printf("Enter the Cost\n");
    scanf("%d",&cost);
    
    if (cost>=800)
        {
            amount = cost - 0.25*cost ;
        }
    else if (cost<=800 && cost>=500)
        {
            amount = cost - 0.20*cost;
        }
    else 
        {
            amount = cost;
        }
    printf("Your amount is %f",amount);
    return 0;
}
